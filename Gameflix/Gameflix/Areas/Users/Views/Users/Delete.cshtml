@model Gameflix.Areas.Users.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2 class="white-font">Delete</h2>

<h3 class="white-font">Are you sure you want to delete this?</h3>
<div>
    <h4 class="white-font">User</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd class="white-font">
            @Html.DisplayFor(model => model.Username)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <br />
            <input type="submit" value="Delete" class="btn btn-primary card-btn center-content width" />
            <br />
            <a href="@Url.Action("Index", "Users", new { area = "Users" })" class="btn btn-primary card-btn center-content center width">Back to List</a>
        </div>
    }
</div>
