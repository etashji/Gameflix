@model Gameflix.Areas.Users.Models.User

@{
    ViewBag.Title = "Login";
}

<h2 class="white-font">Login</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="white-font">User</h4>
        <hr class="white-font"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group center">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 white-font center" })
            <div class="col-md-10 center-content">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control center-content" } })
            </div>
        </div>
        <br />
        <div class="form-group center">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 white-font center" })
            <div class="col-md-10 center-content">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-content" } })
            </div>
        </div>
        <br />
        <div>
            <div>
                <br />
                <input type="submit" value="Login" class="btn btn-primary card-btn center-content width" />
                <br />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
