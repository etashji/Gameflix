@model Gameflix.Areas.Users.Models.User

@{
    ViewBag.Title = "Create";
}

<h2 class="white-font">Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="white-font">User</h4>
        <hr class="white-font"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group center">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 white-font" })
            <div class="col-md-10 center-content">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control center-content" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group center">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 white-font center" })
            <div class="col-md-10 center-content">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-content" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group center">
            @Html.LabelFor(model => model.confirmPassword, htmlAttributes: new { @class = "control-label col-md-2 white-font center" })
            <div class="col-md-10 center-content">
                @Html.PasswordFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control center-content" } })
                @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <div>
                <br />
                <input type="submit" value="Create" class="btn btn-primary card-btn center-content width" />
                <br />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Users", new { area = "Users" })" class="btn btn-primary card-btn center-content center width">Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
